{
  "name": "blog",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:bsouthga/blog.git",
  "author": "Ben Southgate <bsouthga@gmail.com>",
  "watch": {
    "elm": {
      "patterns": [
        "src"
      ],
      "extensions": "elm"
    }
  },
  "scripts": {
    "minify": "cp ./public/index.html ./public/blog.html && html-minifier ./public/blog.html --minify-js --minify-css -o ./public/index.html",
    "elm": "elm make ./src/Main.elm --output ./public/index.html --warn",
    "build": "npm run elm && npm run minify",
    "watch": "http-server & npm-watch"
  },
  "license": "MIT",
  "devDependencies": {
    "html-minifier": "^3.2.3",
    "http-server": "^0.9.0",
    "npm-watch": "^0.1.7"
  }
}
