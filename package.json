{
  "name": "blog",
  "version": "1.0.0",
  "main": "public/index.js",
  "repository": "git@github.com:bsouthga/blog.git",
  "author": "Ben Southgate <bsouthga@gmail.com>",
  "watch": {
    "elm": {
      "patterns": [
        "./frontend/*"
      ],
      "extensions": "elm"
    },
    "styles": {
      "patterns": [
        "./frontend/*"
      ],
      "extensions": "elm"
    },
    "tsc": {
      "patterns": [
        "./backend/*",
        "./public/frontend.*"
      ],
      "extensions": "ts,css,js"
    }
  },
  "scripts": {
    "elm": "elm make ./src/frontend/Main.elm --output ./public/frontend.js",
    "styles": "elm-css ./src/frontend/Build/CompileStyleSheets.elm",
    "build": "npm run tsc && npm run elm && npm run styles",
    "build-prod": "npm run build && npm run minify",
    "minify": "uglifyjs ./public/frontend.js -m 'toplevel' > ./tmp && mv ./tmp ./public/frontend.js",
    "tsc": "tsc",
    "nodemon": "nodemon --watch ./public/index.js",
    "dev": "npm run elm && npm run styles && npm run tsc && npm run nodemon & npm run watch",
    "watch": "sleep 4 && open http://127.0.0.1:8080/ && npm-watch"
  },
  "license": "BSD3",
  "devDependencies": {
    "@types/express": "^4.0.34",
    "@types/html-minifier": "^1.1.30",
    "@types/mongodb": "^2.1.36",
    "@types/node": "^6.0.54",
    "@types/uglify-js": "^2.6.28",
    "elm-css": "^0.6.0",
    "nodemon": "^1.11.0",
    "npm-watch": "^0.1.7",
    "typescript": "^2.1.4",
    "uglify-js": "^2.7.5"
  },
  "dependencies": {
    "express": "^4.14.0",
    "html-minifier": "^3.2.3"
  }
}
