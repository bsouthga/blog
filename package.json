{
  "name": "blog",
  "version": "1.0.0",
  "main": "public/index.js",
  "repository": "git@github.com:bsouthga/blog.git",
  "author": "Ben Southgate <bsouthga@gmail.com>",
  "watch": {
    "elm": {
      "patterns": [
        "frontend"
      ],
      "extensions": "elm"
    },
    "tsc": {
      "patterns": [
        "backend"
      ]
    }
  },
  "scripts": {
    "elm": "elm make ./frontend/Main.elm --output ./public/frontend.js",
    "build": "npm run tsc && npm run elm",
    "tsc": "tsc",
    "nodemon": "nodemon --watch ./public/*.js",
    "dev": "npm run elm && npm run tsc && npm run nodemon & npm run watch",
    "watch": "open http://127.0.0.1:8080/ && npm-watch"
  },
  "license": "BSD3",
  "devDependencies": {
    "@types/express": "^4.0.34",
    "@types/node": "^6.0.54",
    "html-minifier": "^3.2.3",
    "npm-watch": "^0.1.7",
    "typescript": "^2.1.4",
    "nodemon": "^1.11.0"
  },
  "dependencies": {
    "express": "^4.14.0"
  }
}
